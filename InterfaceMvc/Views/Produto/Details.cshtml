@model InterfaceMvc.Models.Produto

@{
    ViewData["Title"] = "Detalhes do Produto";
}

<h1>Detalhes do Produto</h1>

<table class="table">
    <tr>
        <th>ID</th>
        <td>@Model.Id</td>
    </tr>
    <tr>
        <th>Nome</th>
        <td>@Model.Nome</td>
    </tr>
    <tr>
        <th>Preço</th>
        <td>@Model.Preco.ToString("C")</td>
    </tr>
    <tr>
        <th>Descrição</th>
        <td>@Model.Descricao</td>
    </tr>
</table>

<a href="@Url.Action("Index", "Produto")" class="btn btn-secondary">Voltar</a>
